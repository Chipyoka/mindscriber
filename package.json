{
  "name": "Mindscriber",
  "version": "1.0.0",
  "main": "main.js",
  "icon": "src/public/favicon2.ico",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "bgk.mindscriber",
    "win": {
      "target": "nsis",
      "icon": "src/public/favicon2.ico",
      "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
      }
    },
    "files": [
      "node_modules/**/*",
      "src/public/*",
      "src/assets/**/*",
      "main.js",
      "src/index.js",
      "renderer.js",
      "preload.js",
      "src/index.html",
      "src/App.css",
      "mindscriber.sqlite",
      ".gitignore",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    }
  },
  "keywords": [],
  "author": "Mwape Chipyoka",
  "license": "ISC",
  "description": "Desktop Note taking App",
  "dependencies": {
    "bootstrap": "^5.3.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^30.0.8",
    "electron-builder": "^24.13.3"
  }
}
